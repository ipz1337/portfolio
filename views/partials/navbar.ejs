  <!-- Responsive Menu button -->
  <button type="button" class="inline-flex items-center justify-center w-10 h-10 p-2 text-gray-500 rounded-md hover:text-white hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white md:hidden" onclick="toggleMenu()">
    <svg class="w-6 h-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
      <path d="M4 6h16M4 12h16M4 18h16"></path>
    </svg>
  </button>
  <!-- Responsive Menu -->
  <div class="hidden md:block absolute md:static top-16 left-0 w-full md:w-auto bg-gray-900 z-50" id="menu-items">
    <div class="flex flex-col md:flex-row md:items-center md:justify-center w-full md:w-auto">
      <a class="block px-4 py-2 font-medium text-lg hover:text-gray-400 md:mx-2 md:my-0" href="/">Home</a>
